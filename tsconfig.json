{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "outDir": "out",
    "lib": ["ES2021"],
    "sourceMap": true,
    "rootDir": "src",
    "skipLibCheck": false,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowArbitraryExtensions": false,
    "allowImportingTsExtensions": false,
    "allowUmdGlobalAccess": false
  },
  // "exclude": ["node_modules" "out" "src/test" "tests" ".vscode-test"],
  "files": ["src/cppcheck.ts", "src/extension.ts"]
}
